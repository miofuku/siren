{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "lib": ["ES2018", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./scripts"
    },
    "include": [
      "scripts/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }